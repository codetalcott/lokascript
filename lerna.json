{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "version": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/"
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/test/**",
    "**/tests/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}