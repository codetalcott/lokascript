{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hyperfixi.dev/schemas/component.json",
  "title": "HyperFixi Component Definition",
  "description": "Schema for defining reusable hyperscript components with metadata, dependencies, and configuration",
  "type": "object",
  "required": ["id", "name", "version", "hyperscript"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "minLength": 2,
      "maxLength": 50,
      "description": "Unique component identifier using kebab-case"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable component name"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Brief description of component functionality"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(?:-[a-zA-Z0-9.-]+)?$",
      "description": "Semantic version (semver) of the component"
    },
    "category": {
      "type": "string",
      "enum": [
        "form",
        "navigation",
        "ui-interaction",
        "data-display",
        "animation",
        "validation",
        "communication",
        "utility",
        "layout",
        "custom"
      ],
      "description": "Component category for organization"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "maxItems": 10,
      "uniqueItems": true,
      "description": "Tags for component discovery and filtering"
    },
    "hyperscript": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "description": "Single hyperscript expression"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "description": "Multiple hyperscript expressions"
        }
      ],
      "description": "The hyperscript code that defines component behavior"
    },
    "template": {
      "type": "object",
      "properties": {
        "html": {
          "type": "string",
          "description": "HTML template for the component"
        },
        "variables": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_]*$": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "boolean", "array", "object"]
                },
                "default": {
                  "description": "Default value for the variable"
                },
                "description": {
                  "type": "string",
                  "description": "Description of the variable purpose"
                },
                "required": {
                  "type": "boolean",
                  "default": false,
                  "description": "Whether the variable is required"
                }
              },
              "required": ["type"]
            }
          },
          "description": "Template variables with type information"
        },
        "slots": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_]*$": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string",
                  "description": "Description of the slot purpose"
                },
                "required": {
                  "type": "boolean",
                  "default": false,
                  "description": "Whether the slot is required"
                },
                "default": {
                  "type": "string",
                  "description": "Default content for the slot"
                }
              }
            }
          },
          "description": "Named slots for content injection"
        }
      },
      "description": "Template definition for component rendering"
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$"
          },
          "uniqueItems": true,
          "description": "Other components this component depends on"
        },
        "css": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "CSS files or classes required by this component"
        },
        "javascript": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "JavaScript libraries required by this component"
        }
      },
      "description": "External dependencies required by the component"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "compilation": {
          "type": "object",
          "properties": {
            "minify": {
              "type": "boolean",
              "default": true,
              "description": "Whether to minify compiled output"
            },
            "compatibility": {
              "type": "string",
              "enum": ["modern", "legacy"],
              "default": "modern",
              "description": "JavaScript compatibility target"
            },
            "sourceMap": {
              "type": "boolean",
              "default": false,
              "description": "Whether to generate source maps"
            },
            "optimization": {
              "type": "boolean",
              "default": true,
              "description": "Whether to enable optimization"
            }
          },
          "description": "Compilation configuration options"
        },
        "deployment": {
          "type": "object",
          "properties": {
            "environments": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["development", "staging", "production", "test"]
              },
              "uniqueItems": true,
              "description": "Target deployment environments"
            },
            "frameworks": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["express", "django", "flask", "fastapi", "gin", "vanilla"]
              },
              "uniqueItems": true,
              "description": "Supported web frameworks"
            }
          },
          "description": "Deployment configuration"
        }
      },
      "description": "Component configuration options"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string",
          "description": "Component author"
        },
        "license": {
          "type": "string",
          "description": "Component license"
        },
        "repository": {
          "type": "string",
          "format": "uri",
          "description": "Repository URL"
        },
        "documentation": {
          "type": "string",
          "format": "uri",
          "description": "Documentation URL"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Example name"
              },
              "description": {
                "type": "string",
                "description": "Example description"
              },
              "html": {
                "type": "string",
                "description": "Example HTML usage"
              },
              "variables": {
                "type": "object",
                "description": "Example template variables"
              }
            },
            "required": ["name", "html"]
          },
          "description": "Usage examples"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 20,
          "uniqueItems": true,
          "description": "Keywords for searching and categorization"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "updated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        }
      },
      "description": "Additional metadata about the component"
    },
    "validation": {
      "type": "object",
      "properties": {
        "events": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "click", "dblclick", "mousedown", "mouseup", "mouseover", "mouseout",
              "keydown", "keyup", "keypress", "focus", "blur", "change", "input",
              "submit", "reset", "load", "unload", "resize", "scroll", "error",
              "dragstart", "drag", "dragenter", "dragover", "dragleave", "drop", "dragend",
              "touchstart", "touchmove", "touchend", "touchcancel"
            ]
          },
          "uniqueItems": true,
          "description": "Events that this component handles"
        },
        "selectors": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[.#]?[a-zA-Z][a-zA-Z0-9_-]*$|^\\[[a-zA-Z][a-zA-Z0-9_-]*[~|^$*]?=?[\"']?[^\"']*[\"']?\\]$"
          },
          "uniqueItems": true,
          "description": "CSS selectors used by this component"
        },
        "commands": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "add", "remove", "toggle", "put", "fetch", "post", "get", "delete",
              "trigger", "wait", "halt", "log", "call", "set", "take", "make",
              "hide", "show", "fadeIn", "fadeOut", "slideUp", "slideDown"
            ]
          },
          "uniqueItems": true,
          "description": "Hyperscript commands used by this component"
        },
        "complexity": {
          "type": "number",
          "minimum": 1,
          "maximum": 10,
          "description": "Complexity rating from 1 (simple) to 10 (complex)"
        }
      },
      "description": "Validation and analysis metadata"
    },
    "testing": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Test name"
              },
              "description": {
                "type": "string",
                "description": "Test description"
              },
              "setup": {
                "type": "string",
                "description": "HTML setup for the test"
              },
              "action": {
                "type": "string",
                "description": "Action to perform (e.g., 'click button')"
              },
              "expected": {
                "type": "string",
                "description": "Expected result"
              }
            },
            "required": ["name", "action", "expected"]
          },
          "description": "Unit tests for the component"
        },
        "integration": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Integration test name"
              },
              "description": {
                "type": "string",
                "description": "Integration test description"
              },
              "scenario": {
                "type": "string",
                "description": "Test scenario description"
              },
              "steps": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Test steps"
              }
            },
            "required": ["name", "scenario", "steps"]
          },
          "description": "Integration tests for the component"
        }
      },
      "description": "Testing specifications for the component"
    }
  },
  "additionalProperties": false
}