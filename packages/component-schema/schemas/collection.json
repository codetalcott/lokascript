{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hyperfixi.dev/schemas/collection.json",
  "title": "HyperFixi Component Collection",
  "description": "Schema for defining collections of hyperscript components with shared configuration and metadata",
  "type": "object",
  "required": ["name", "version", "components"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Collection name"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Collection description"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(?:-[a-zA-Z0-9.-]+)?$",
      "description": "Collection version (semver)"
    },
    "author": {
      "type": "string",
      "description": "Collection author"
    },
    "license": {
      "type": "string",
      "description": "Collection license"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Repository URL"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Collection homepage"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "maxItems": 20,
      "uniqueItems": true,
      "description": "Collection keywords"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "compilation": {
              "type": "object",
              "properties": {
                "minify": {
                  "type": "boolean",
                  "default": true
                },
                "compatibility": {
                  "type": "string",
                  "enum": ["modern", "legacy"],
                  "default": "modern"
                },
                "sourceMap": {
                  "type": "boolean",
                  "default": false
                },
                "optimization": {
                  "type": "boolean",
                  "default": true
                }
              },
              "description": "Default compilation options for all components"
            }
          },
          "description": "Default configuration for all components in collection"
        },
        "environment": {
          "type": "object",
          "properties": {
            "node": {
              "type": "string",
              "description": "Required Node.js version"
            },
            "frameworks": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Supported frameworks"
            }
          },
          "description": "Environment requirements"
        }
      },
      "description": "Collection-wide configuration"
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "collections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Collection name"
              },
              "version": {
                "type": "string",
                "description": "Required version"
              },
              "source": {
                "type": "string",
                "format": "uri",
                "description": "Collection source URL"
              }
            },
            "required": ["name", "version"]
          },
          "description": "Other collections this collection depends on"
        },
        "external": {
          "type": "object",
          "properties": {
            "css": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "External CSS dependencies"
            },
            "javascript": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "External JavaScript dependencies"
            }
          },
          "description": "External dependencies for the entire collection"
        }
      },
      "description": "Collection dependencies"
    },
    "components": {
      "type": "object",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "oneOf": [
            {
              "$ref": "component.json",
              "description": "Inline component definition"
            },
            {
              "type": "string",
              "format": "uri-reference",
              "description": "Reference to external component file"
            }
          ]
        }
      },
      "minProperties": 1,
      "description": "Components in this collection"
    },
    "manifest": {
      "type": "object",
      "properties": {
        "build": {
          "type": "object",
          "properties": {
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "Build timestamp"
            },
            "version": {
              "type": "string",
              "description": "Build version"
            },
            "environment": {
              "type": "string",
              "description": "Build environment"
            }
          },
          "description": "Build information"
        },
        "assets": {
          "type": "object",
          "properties": {
            "css": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Generated CSS files"
            },
            "javascript": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Generated JavaScript files"
            },
            "templates": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Generated template files"
            }
          },
          "description": "Generated assets"
        },
        "statistics": {
          "type": "object",
          "properties": {
            "totalComponents": {
              "type": "number",
              "minimum": 0,
              "description": "Total number of components"
            },
            "categories": {
              "type": "object",
              "patternProperties": {
                "^[a-z-]+$": {
                  "type": "number",
                  "minimum": 0
                }
              },
              "description": "Component count by category"
            },
            "averageComplexity": {
              "type": "number",
              "minimum": 1,
              "maximum": 10,
              "description": "Average complexity rating"
            }
          },
          "description": "Collection statistics"
        }
      },
      "description": "Collection manifest and metadata"
    }
  },
  "additionalProperties": false
}