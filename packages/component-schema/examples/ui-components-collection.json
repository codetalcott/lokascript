{
  "name": "HyperFixi UI Components",
  "description": "A comprehensive collection of interactive UI components built with hyperscript",
  "version": "2.1.0",
  "author": "HyperFixi Team",
  "license": "MIT",
  "repository": "https://github.com/hyperfixi/ui-components",
  "homepage": "https://hyperfixi.dev/components",
  "keywords": ["hyperscript", "ui", "components", "interactive", "web"],
  "configuration": {
    "defaults": {
      "compilation": {
        "minify": true,
        "compatibility": "modern",
        "sourceMap": false,
        "optimization": true
      }
    },
    "environment": {
      "node": ">=16.0.0",
      "frameworks": ["express", "django", "flask", "fastapi", "gin", "vanilla"]
    }
  },
  "dependencies": {
    "external": {
      "css": [
        "https://cdn.jsdelivr.net/npm/normalize.css@8.0.1/normalize.min.css"
      ],
      "javascript": []
    }
  },
  "components": {
    "toggle-button": {
      "id": "toggle-button",
      "name": "Toggle Button",
      "description": "A button that toggles a CSS class on itself or other elements",
      "version": "1.0.0",
      "category": "ui-interaction",
      "tags": ["button", "toggle", "state", "css-class"],
      "hyperscript": "on click toggle .active",
      "template": {
        "html": "<button class=\"{{buttonClass}}\" _=\"on click toggle .active\">{{buttonText}}</button>",
        "variables": {
          "buttonClass": {
            "type": "string",
            "default": "toggle-btn",
            "description": "CSS class for the button"
          },
          "buttonText": {
            "type": "string",
            "default": "Toggle",
            "description": "Text displayed on the button",
            "required": true
          }
        }
      },
      "dependencies": {
        "css": ["toggle-button.css"]
      },
      "validation": {
        "events": ["click"],
        "selectors": [".active"],
        "commands": ["toggle"],
        "complexity": 2
      }
    },
    "ajax-form": {
      "id": "ajax-form",
      "name": "AJAX Form Submission",
      "description": "A form that submits data via AJAX and displays the result",
      "version": "1.2.0",
      "category": "form",
      "tags": ["form", "ajax", "submit", "fetch", "api"],
      "hyperscript": [
        "on submit halt",
        "on submit fetch {{apiUrl}} with method: 'POST' then put result into #{{resultId}}"
      ],
      "template": {
        "html": "<form _=\"on submit halt then fetch {{apiUrl}} with method: 'POST' then put result into #{{resultId}}\">{{formContent}}<button type=\"submit\">{{submitText}}</button></form><div id=\"{{resultId}}\"></div>",
        "variables": {
          "apiUrl": {
            "type": "string",
            "description": "API endpoint URL for form submission",
            "required": true
          },
          "resultId": {
            "type": "string",
            "default": "form-result",
            "description": "ID of element to display submission result"
          },
          "formContent": {
            "type": "string",
            "description": "HTML content of the form (inputs, etc.)",
            "required": true
          },
          "submitText": {
            "type": "string",
            "default": "Submit",
            "description": "Text for the submit button"
          }
        }
      },
      "dependencies": {
        "css": ["form-styles.css"],
        "javascript": ["fetch-polyfill.js"]
      },
      "validation": {
        "events": ["submit"],
        "selectors": ["#form-result"],
        "commands": ["halt", "fetch", "put"],
        "complexity": 5
      }
    },
    "modal-dialog": {
      "id": "modal-dialog",
      "name": "Modal Dialog",
      "description": "A modal dialog that can be opened and closed with backdrop and ESC key support",
      "version": "2.0.1",
      "category": "ui-interaction",
      "tags": ["modal", "dialog", "overlay", "popup", "ui"],
      "hyperscript": [
        "on click from .modal-trigger add .show to #{{modalId}}",
        "on click from .modal-close remove .show from #{{modalId}}",
        "on click from .modal-backdrop remove .show from #{{modalId}}",
        "on keydown[key=='Escape'] from document remove .show from #{{modalId}}"
      ],
      "template": {
        "html": "<div id=\"{{modalId}}\" class=\"modal\"><div class=\"modal-backdrop\"></div><div class=\"modal-content\"><button class=\"modal-close\" aria-label=\"Close\">&times;</button>{{modalContent}}</div></div>",
        "variables": {
          "modalId": {
            "type": "string",
            "default": "modal",
            "description": "Unique ID for the modal element"
          },
          "modalContent": {
            "type": "string",
            "description": "HTML content to display in the modal",
            "required": true
          }
        }
      },
      "dependencies": {
        "css": ["modal.css"],
        "components": ["focus-trap"]
      },
      "validation": {
        "events": ["click", "keydown"],
        "selectors": [".modal-trigger", ".modal-close", ".modal-backdrop", "#modal"],
        "commands": ["add", "remove"],
        "complexity": 6
      }
    }
  },
  "manifest": {
    "build": {
      "timestamp": "2023-12-01T18:00:00Z",
      "version": "2.1.0",
      "environment": "production"
    },
    "assets": {
      "css": [
        "dist/ui-components.min.css",
        "dist/themes/default.css",
        "dist/themes/dark.css"
      ],
      "javascript": [
        "dist/ui-components.min.js",
        "dist/ui-components.esm.js"
      ],
      "templates": [
        "dist/templates/toggle-button.html",
        "dist/templates/ajax-form.html",
        "dist/templates/modal-dialog.html"
      ]
    },
    "statistics": {
      "totalComponents": 3,
      "categories": {
        "ui-interaction": 2,
        "form": 1
      },
      "averageComplexity": 4.3
    }
  }
}