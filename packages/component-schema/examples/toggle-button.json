{
  "id": "toggle-button",
  "name": "Toggle Button",
  "description": "A button that toggles a CSS class on itself or other elements",
  "version": "1.0.0",
  "category": "ui-interaction",
  "tags": ["button", "toggle", "state", "css-class"],
  "hyperscript": "on click toggle .active",
  "template": {
    "html": "<button class=\"{{buttonClass}}\" _=\"on click toggle .active\">{{buttonText}}</button>",
    "variables": {
      "buttonClass": {
        "type": "string",
        "default": "toggle-btn",
        "description": "CSS class for the button"
      },
      "buttonText": {
        "type": "string",
        "default": "Toggle",
        "description": "Text displayed on the button",
        "required": true
      }
    }
  },
  "dependencies": {
    "css": ["toggle-button.css"]
  },
  "configuration": {
    "compilation": {
      "minify": true,
      "compatibility": "modern"
    },
    "deployment": {
      "environments": ["development", "production"],
      "frameworks": ["express", "django", "flask", "gin"]
    }
  },
  "metadata": {
    "author": "HyperFixi Team",
    "license": "MIT",
    "keywords": ["toggle", "button", "ui", "interaction", "css", "class"],
    "examples": [
      {
        "name": "Basic Toggle",
        "description": "Simple toggle button that toggles its own active state",
        "html": "<button _=\"on click toggle .active\">Toggle Me</button>"
      },
      {
        "name": "Toggle with Custom Class",
        "description": "Toggle button with custom styling",
        "html": "<button class=\"btn btn-primary\" _=\"on click toggle .active\">Custom Toggle</button>",
        "variables": {
          "buttonClass": "btn btn-primary",
          "buttonText": "Custom Toggle"
        }
      }
    ],
    "created": "2023-12-01T10:00:00Z",
    "updated": "2023-12-01T10:00:00Z"
  },
  "validation": {
    "events": ["click"],
    "selectors": [".active"],
    "commands": ["toggle"],
    "complexity": 2
  },
  "testing": {
    "unit": [
      {
        "name": "Toggle adds active class",
        "description": "Clicking the button should add the active class",
        "setup": "<button id=\"test-btn\" _=\"on click toggle .active\">Test</button>",
        "action": "click button",
        "expected": "button has class 'active'"
      },
      {
        "name": "Toggle removes active class",
        "description": "Clicking an active button should remove the active class",
        "setup": "<button id=\"test-btn\" class=\"active\" _=\"on click toggle .active\">Test</button>",
        "action": "click button",
        "expected": "button does not have class 'active'"
      }
    ],
    "integration": [
      {
        "name": "Multiple toggles work independently",
        "description": "Multiple toggle buttons should work independently",
        "scenario": "Two toggle buttons on the same page",
        "steps": [
          "Click first button",
          "Verify first button has active class",
          "Verify second button does not have active class",
          "Click second button",
          "Verify both buttons have active class"
        ]
      }
    ]
  }
}