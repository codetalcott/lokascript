{
  "id": "ajax-form",
  "name": "AJAX Form Submission",
  "description": "A form that submits data via AJAX and displays the result",
  "version": "1.2.0",
  "category": "form",
  "tags": ["form", "ajax", "submit", "fetch", "api"],
  "hyperscript": [
    "on submit halt",
    "on submit fetch {{apiUrl}} with method: 'POST' then put result into #{{resultId}}"
  ],
  "template": {
    "html": "<form _=\"on submit halt then fetch {{apiUrl}} with method: 'POST' then put result into #{{resultId}}\">{{formContent}}<button type=\"submit\">{{submitText}}</button></form><div id=\"{{resultId}}\"></div>",
    "variables": {
      "apiUrl": {
        "type": "string",
        "description": "API endpoint URL for form submission",
        "required": true
      },
      "resultId": {
        "type": "string",
        "default": "form-result",
        "description": "ID of element to display submission result"
      },
      "formContent": {
        "type": "string",
        "description": "HTML content of the form (inputs, etc.)",
        "required": true
      },
      "submitText": {
        "type": "string",
        "default": "Submit",
        "description": "Text for the submit button"
      }
    },
    "slots": {
      "inputs": {
        "description": "Form input elements",
        "required": true
      },
      "result": {
        "description": "Area to display submission results",
        "default": "<div class=\"form-result\"></div>"
      }
    }
  },
  "dependencies": {
    "css": ["form-styles.css"],
    "javascript": ["fetch-polyfill.js"]
  },
  "configuration": {
    "compilation": {
      "minify": true,
      "compatibility": "modern",
      "sourceMap": false,
      "optimization": true
    },
    "deployment": {
      "environments": ["development", "staging", "production"],
      "frameworks": ["express", "django", "flask", "fastapi", "gin"]
    }
  },
  "metadata": {
    "author": "HyperFixi Team",
    "license": "MIT",
    "repository": "https://github.com/hyperfixi/components",
    "documentation": "https://hyperfixi.dev/docs/components/ajax-form",
    "keywords": ["ajax", "form", "submission", "fetch", "api", "async"],
    "examples": [
      {
        "name": "Contact Form",
        "description": "Simple contact form with AJAX submission",
        "html": "<form _=\"on submit halt then fetch /api/contact with method: 'POST' then put result into #contact-result\"><input name=\"name\" placeholder=\"Name\" required><input name=\"email\" type=\"email\" placeholder=\"Email\" required><textarea name=\"message\" placeholder=\"Message\" required></textarea><button type=\"submit\">Send Message</button></form><div id=\"contact-result\"></div>",
        "variables": {
          "apiUrl": "/api/contact",
          "resultId": "contact-result",
          "submitText": "Send Message"
        }
      },
      {
        "name": "Newsletter Signup",
        "description": "Newsletter signup form with success feedback",
        "html": "<form _=\"on submit halt then fetch /api/newsletter with method: 'POST' then put result into #signup-result\"><input name=\"email\" type=\"email\" placeholder=\"Your email\" required><button type=\"submit\">Subscribe</button></form><div id=\"signup-result\"></div>",
        "variables": {
          "apiUrl": "/api/newsletter",
          "resultId": "signup-result",
          "submitText": "Subscribe"
        }
      }
    ],
    "created": "2023-11-15T09:30:00Z",
    "updated": "2023-12-01T14:15:00Z"
  },
  "validation": {
    "events": ["submit"],
    "selectors": ["#form-result"],
    "commands": ["halt", "fetch", "put"],
    "complexity": 5
  },
  "testing": {
    "unit": [
      {
        "name": "Form prevents default submission",
        "description": "Form should not submit normally when hyperscript is active",
        "setup": "<form _=\"on submit halt\"><button type=\"submit\">Submit</button></form>",
        "action": "submit form",
        "expected": "page does not reload"
      },
      {
        "name": "Successful AJAX submission",
        "description": "Form should make AJAX request and display result",
        "setup": "<form _=\"on submit halt then fetch /api/test with method: 'POST' then put result into #result\"><button type=\"submit\">Submit</button></form><div id=\"result\"></div>",
        "action": "submit form",
        "expected": "result element contains response data"
      }
    ],
    "integration": [
      {
        "name": "Form validation integration",
        "description": "AJAX form should work with client-side validation",
        "scenario": "Form with required fields and AJAX submission",
        "steps": [
          "Submit form with empty required field",
          "Verify browser validation prevents submission",
          "Fill required field",
          "Submit form",
          "Verify AJAX request is made",
          "Verify result is displayed"
        ]
      }
    ]
  }
}