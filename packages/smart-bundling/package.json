{
  "name": "@hyperfixi/smart-bundling",
  "version": "2.1.0",
  "private": true,
  "description": "Intelligent bundling system for LokaScript applications based on usage patterns",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./analyzer": {
      "import": "./dist/analyzer.mjs",
      "require": "./dist/analyzer.js",
      "types": "./dist/analyzer.d.ts"
    },
    "./optimizer": {
      "import": "./dist/optimizer.mjs",
      "require": "./dist/optimizer.js",
      "types": "./dist/optimizer.d.ts"
    },
    "./bundler": {
      "import": "./dist/bundler.mjs",
      "require": "./dist/bundler.js",
      "types": "./dist/bundler.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "test:check": "vitest run --reporter=dot 2>&1 | tail -5"
  },
  "keywords": [
    "hyperscript",
    "bundling",
    "optimization",
    "smart-bundling",
    "tree-shaking",
    "code-splitting",
    "performance",
    "hyperfixi"
  ],
  "author": "LokaScript Contributors",
  "license": "MIT",
  "dependencies": {
    "@hyperfixi/core": "*",
    "@rollup/plugin-terser": "^0.4.4",
    "acorn": "^8.10.0",
    "acorn-walk": "^8.2.0",
    "esbuild": "^0.27.3",
    "fs-extra": "^11.1.0",
    "glob": "^11.0.0",
    "happy-dom": "20.0.6",
    "magic-string": "^0.30.0",
    "rollup": "^4.0.0",
    "semver": "^7.5.0",
    "source-map": "^0.7.4",
    "terser": "^5.20.0",
    "vite": "^7.1.12"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist",
    "src"
  ]
}
