{
  "name": "@lokascript/i18n",
  "version": "2.1.0",
  "description": "Grammar transformation and keyword translation for hyperscript",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs"
    },
    "./dictionaries": {
      "types": "./dist/dictionaries/index.d.ts",
      "import": "./dist/dictionaries/index.js",
      "require": "./dist/dictionaries/index.cjs"
    },
    "./plugins/vite": {
      "types": "./dist/plugins/vite.d.ts",
      "import": "./dist/plugins/vite.js",
      "require": "./dist/plugins/vite.cjs"
    },
    "./plugins/webpack": {
      "types": "./dist/plugins/webpack.d.ts",
      "import": "./dist/plugins/webpack.js",
      "require": "./dist/plugins/webpack.cjs"
    }
  },
  "scripts": {
    "build": "tsup && npm run build:browser",
    "build:browser": "rollup -c rollup.config.mjs",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:check": "vitest run --reporter=dot 2>&1 | tail -5",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "validate-dictionaries": "node scripts/validate-dictionaries.js"
  },
  "browser": "dist/lokascript-i18n.min.js",
  "sideEffects": false,
  "keywords": [
    "hyperscript",
    "i18n",
    "internationalization",
    "translation",
    "localization"
  ],
  "author": "LokaScript Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codetalcott/hyperfixi.git",
    "directory": "packages/i18n"
  },
  "bugs": {
    "url": "https://github.com/codetalcott/hyperfixi/issues"
  },
  "homepage": "https://github.com/codetalcott/hyperfixi/tree/main/packages/i18n#readme",
  "dependencies": {
    "@hyperfixi/core": "*",
    "@lokascript/semantic": "*",
    "esbuild": "0.27.3",
    "happy-dom": "20.0.6",
    "vite": "^7.1.12"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^8.0.0",
    "rollup": "^4.41.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  }
}
