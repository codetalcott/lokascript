{
  "name": "@lokascript/template-integration",
  "private": true,
  "version": "1.3.0",
  "description": "Template compiler that processes embedded hyperscript with component integration",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "hyperscript",
    "template",
    "compiler",
    "server-side-rendering",
    "component",
    "hyperfixi"
  ],
  "author": "LokaScript Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codetalcott/lokascript.git",
    "directory": "packages/template-integration"
  },
  "dependencies": {
    "@lokascript/component-schema": "*",
    "esbuild": "0.25.11",
    "happy-dom": "20.0.6",
    "vite": "^7.1.12"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^8.54.0",
    "rollup": "^4.6.1",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
