{
  "name": "@lokascript/domain-bdd",
  "version": "2.0.0",
  "description": "Multilingual BDD specification domain built on @lokascript/framework â€” Given/When/Then in 4 languages, compiles to Playwright tests",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --noEmit false",
    "test": "vitest",
    "test:run": "vitest run",
    "test:check": "vitest run --reporter=dot 2>&1 | tail -5",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@lokascript/framework": "*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist",
    "src",
    "LICENSE"
  ],
  "keywords": [
    "bdd",
    "behavior-driven",
    "multilingual",
    "dsl",
    "i18n",
    "playwright",
    "testing",
    "lokascript",
    "framework"
  ],
  "author": "LokaScript Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codetalcott/hyperfixi.git",
    "directory": "packages/domain-bdd"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
