{
  "name": "@hyperfixi/server-bridge",
  "version": "1.0.0",
  "description": "Extract server route contracts from hyperscript/htmx HTML and generate server-side route scaffolding",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "serverbridge": "dist/cli.cjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --noEmit false --outDir dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:check": "vitest run --reporter=dot 2>&1 | tail -5",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "glob": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist",
    "src",
    "LICENSE"
  ],
  "keywords": [
    "hyperscript",
    "htmx",
    "server",
    "routes",
    "codegen",
    "express",
    "hono",
    "serverbridge"
  ],
  "author": "HyperFixi Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codetalcott/hyperfixi.git",
    "directory": "packages/server-bridge"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
