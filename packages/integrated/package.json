{
  "name": "hyperfixi",
  "version": "1.0.0",
  "description": "Complete hyperscript expression engine with utilities - batteries included",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "@hyperfixi/core",
      "require": "@hyperfixi/core",
      "types": "@hyperfixi/core"
    },
    "./fixi": {
      "import": "@hyperfixi/fixi",
      "require": "@hyperfixi/fixi",
      "types": "@hyperfixi/fixi"
    }
  },
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "size": "npm run size:analysis",
    "size:analysis": "echo 'Size Analysis:' && echo 'ES Module: '$(wc -c < dist/index.mjs)' bytes' && echo 'Gzipped: '$(gzip -c dist/index.mjs | wc -c)' bytes'"
  },
  "dependencies": {
    "@hyperfixi/core": "^1.0.0",
    "@hyperfixi/fixi": "^1.0.0",
    "vite": "7.1.10"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "happy-dom": "^20.0.6",
    "prettier": "^3.0.0",
    "rollup": "^2.79.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "hyperscript",
    "fixi",
    "utilities",
    "dom",
    "expressions",
    "parser",
    "batteries-included"
  ],
  "author": "HyperFixi Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperfixi/hyperfixi.git",
    "directory": "packages/integrated"
  },
  "bugs": {
    "url": "https://github.com/hyperfixi/hyperfixi/issues"
  },
  "homepage": "https://github.com/hyperfixi/hyperfixi/tree/main/packages/integrated#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
