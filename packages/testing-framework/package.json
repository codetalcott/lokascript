{
  "name": "@hyperfixi/testing-framework",
  "version": "2.1.0",
  "description": "Cross-platform behavior testing suite for LokaScript applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "hyperfixi-test": "dist/cli.js",
    "hyperfixi-test-multilingual": "dist/multilingual/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./runner": {
      "import": "./dist/runner.mjs",
      "require": "./dist/runner.js",
      "types": "./dist/runner.d.ts"
    },
    "./assertions": {
      "import": "./dist/assertions.mjs",
      "require": "./dist/assertions.js",
      "types": "./dist/assertions.d.ts"
    },
    "./browser": {
      "import": "./dist/browser.mjs",
      "require": "./dist/browser.js",
      "types": "./dist/browser.d.ts"
    },
    "./e2e": {
      "import": "./dist/e2e.mjs",
      "require": "./dist/e2e.js",
      "types": "./dist/e2e.d.ts"
    },
    "./multilingual": {
      "import": "./dist/multilingual/index.mjs",
      "require": "./dist/multilingual/index.js",
      "types": "./dist/multilingual/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:multilingual": "tsx src/multilingual/cli.ts",
    "test:multilingual:quick": "tsx src/multilingual/cli.ts --quick",
    "test:multilingual:full": "tsx src/multilingual/cli.ts --full",
    "test:multilingual:regression": "tsx src/multilingual/cli.ts --regression",
    "analyze-failures": "tsx src/multilingual/tools/analyze-failures.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "test:check": "vitest run --reporter=dot 2>&1 | tail -5"
  },
  "keywords": [
    "hyperscript",
    "testing",
    "behavior-testing",
    "e2e",
    "cross-platform",
    "test-runner",
    "assertions",
    "browser-testing",
    "hyperfixi"
  ],
  "author": "LokaScript Contributors",
  "license": "MIT",
  "dependencies": {
    "@hyperfixi/core": "*",
    "@hyperfixi/patterns-reference": "*",
    "@lokascript/semantic": "*",
    "diff": "^8.0.3",
    "esbuild": "0.27.3",
    "happy-dom": "20.0.6",
    "jsdom": "^28.1.0",
    "playwright": "^1.40.0",
    "puppeteer": "^24.26.1",
    "tsx": "^4.19.2",
    "url-parse": "^1.5.10",
    "vite": "^7.1.12"
  },
  "devDependencies": {
    "@types/diff": "^5.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "playwright": "^1.40.0"
  },
  "peerDependenciesMeta": {
    "puppeteer": {
      "optional": true
    },
    "playwright": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codetalcott/hyperfixi.git",
    "directory": "packages/testing-framework"
  },
  "bugs": {
    "url": "https://github.com/codetalcott/hyperfixi/issues"
  },
  "homepage": "https://github.com/codetalcott/hyperfixi/tree/main/packages/testing-framework#readme"
}
