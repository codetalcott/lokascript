{
  "name": "@lokascript/language-server",
  "version": "1.0.0",
  "description": "Language Server Protocol implementation for LokaScript/hyperscript with 21 language support",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "lokascript-language-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsup src/server.ts --format esm --dts",
    "start": "node dist/server.js --stdio",
    "dev": "tsx src/server.ts --stdio",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "lsp",
    "language-server",
    "hyperscript",
    "lokascript",
    "vscode",
    "ide",
    "multilingual"
  ],
  "author": "LokaScript Team",
  "license": "MIT",
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "peerDependencies": {
    "@lokascript/semantic": "*",
    "@lokascript/core": "*",
    "@lokascript/ast-toolkit": "*"
  },
  "peerDependenciesMeta": {
    "@lokascript/semantic": {
      "optional": true
    },
    "@lokascript/core": {
      "optional": true
    },
    "@lokascript/ast-toolkit": {
      "optional": true
    }
  },
  "devDependencies": {
    "@lokascript/semantic": "*",
    "@lokascript/core": "*",
    "@lokascript/ast-toolkit": "*",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
