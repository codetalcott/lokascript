{
  "name": "lokascript-vscode",
  "displayName": "LokaScript",
  "description": "Language support for LokaScript/hyperscript with 21 language support",
  "version": "1.0.0",
  "publisher": "lokascript",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "hyperscript",
    "lokascript",
    "htmx",
    "html",
    "multilingual"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:hyperscript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hyperscript",
        "aliases": [
          "Hyperscript",
          "LokaScript"
        ],
        "extensions": [
          ".hs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hyperscript",
        "scopeName": "source.hyperscript",
        "path": "./syntaxes/hyperscript.tmLanguage.json"
      },
      {
        "scopeName": "inline.hyperscript",
        "path": "./syntaxes/hyperscript-injection.tmLanguage.json",
        "injectTo": [
          "text.html.basic",
          "text.html.derivative",
          "text.html.vue",
          "source.vue",
          "source.svelte"
        ],
        "embeddedLanguages": {
          "meta.embedded.inline.hyperscript": "hyperscript"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "LokaScript",
      "properties": {
        "lokascript.language": {
          "type": "string",
          "default": "en",
          "description": "Primary language for keyword suggestions (en, es, ja, ko, zh, de, fr, pt, ar, etc.)"
        },
        "lokascript.maxDiagnostics": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of diagnostics to show per file"
        },
        "lokascript.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run generate:grammar && npm run compile",
    "compile": "tsup src/extension.ts --format cjs --external vscode --dts",
    "watch": "tsup src/extension.ts --format cjs --external vscode --watch",
    "typecheck": "tsc --noEmit",
    "generate:grammar": "npx tsx scripts/generate-grammar.ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.0.0",
    "@lokascript/semantic": "*",
    "tsx": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codetalcott/lokascript.git",
    "directory": "packages/vscode-extension"
  },
  "license": "MIT"
}
