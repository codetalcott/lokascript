{
  "name": "@lokascript/compilation-service",
  "version": "2.0.0",
  "description": "Semantic compilation service for LokaScript - validates and compiles hyperscript from 24 languages, explicit syntax, or LLM JSON",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./http": {
      "types": "./dist/http.d.ts",
      "import": "./dist/http.js",
      "require": "./dist/http.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "pretest": "../../scripts/ensure-fresh.sh ../semantic ../aot-compiler",
    "test": "vitest run",
    "test:watch": "vitest",
    "serve": "tsx src/serve.ts",
    "test:check": "vitest run --reporter=dot 2>&1 | tail -5",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "hono": "^4.11.7"
  },
  "devDependencies": {
    "@hono/node-server": "^1.13.0",
    "@hyperfixi/aot-compiler": "*",
    "@lokascript/semantic": "*",
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "@hyperfixi/aot-compiler": "*",
    "@lokascript/semantic": "*"
  },
  "peerDependenciesMeta": {
    "@hyperfixi/aot-compiler": {
      "optional": false
    },
    "@lokascript/semantic": {
      "optional": false
    }
  },
  "keywords": [
    "hyperscript",
    "lokascript",
    "compilation",
    "semantic",
    "multilingual",
    "llm",
    "http",
    "edge",
    "react"
  ],
  "author": "LokaScript Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lokascript/lokascript.git",
    "directory": "packages/compilation-service"
  }
}
