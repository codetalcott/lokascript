{
  "name": "@hyperfixi/developer-tools",
  "version": "2.1.0",
  "private": true,
  "description": "CLI tools and visual builder API for LokaScript development",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "hyperfixi": "dist/cli.js",
    "hfx": "dist/cli.js",
    "lks": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.js"
    },
    "./builder": {
      "types": "./dist/builder.d.ts",
      "import": "./dist/builder.mjs",
      "require": "./dist/builder.js"
    },
    "./analyzer": {
      "types": "./dist/analyzer.d.ts",
      "import": "./dist/analyzer.mjs",
      "require": "./dist/analyzer.js"
    },
    "./generator": {
      "types": "./dist/generator.d.ts",
      "import": "./dist/generator.mjs",
      "require": "./dist/generator.js"
    },
    "./prism-hyperscript-i18n": {
      "types": "./dist/prism-hyperscript-i18n/index.d.ts",
      "import": "./dist/prism-hyperscript-i18n/index.mjs",
      "require": "./dist/prism-hyperscript-i18n/index.js"
    },
    "./prism-hyperscript-i18n/browser": {
      "types": "./dist/prism-hyperscript-i18n/browser.d.ts",
      "import": "./dist/prism-hyperscript-i18n/browser.mjs",
      "require": "./dist/prism-hyperscript-i18n/browser.js"
    },
    "./prism-hyperscript-i18n/themes/light.css": "./src/prism-hyperscript-i18n/themes/light.css",
    "./prism-hyperscript-i18n/themes/dark.css": "./src/prism-hyperscript-i18n/themes/dark.css"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "test:check": "vitest run --reporter=dot 2>&1 | tail -5"
  },
  "keywords": [
    "hyperscript",
    "developer-tools",
    "cli",
    "visual-builder",
    "code-generation",
    "analyzer",
    "scaffolding",
    "hyperfixi",
    "prism",
    "syntax-highlighting",
    "i18n"
  ],
  "author": "LokaScript Contributors",
  "license": "MIT",
  "dependencies": {
    "@hyperfixi/core": "*",
    "@lokascript/i18n": "*",
    "boxen": "^7.1.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.0",
    "commander": "^11.0.0",
    "esbuild": "0.27.3",
    "express": "^4.18.0",
    "fs-extra": "^11.1.0",
    "glob": "^11.0.0",
    "happy-dom": "20.0.6",
    "inquirer": "^9.2.0",
    "open": "^9.1.0",
    "ora": "^7.0.0",
    "semver": "^7.5.0",
    "vite": "^7.1.12",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.0",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "prismjs": "^1.29.0"
  },
  "peerDependenciesMeta": {
    "prismjs": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "src",
    "templates"
  ]
}
