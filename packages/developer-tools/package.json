{
  "name": "@hyperfixi/developer-tools",
  "version": "0.1.0",
  "description": "CLI tools and visual builder API for HyperFixi development",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "hyperfixi": "dist/cli.js",
    "hfx": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    },
    "./builder": {
      "import": "./dist/builder.mjs",
      "require": "./dist/builder.js",
      "types": "./dist/builder.d.ts"
    },
    "./analyzer": {
      "import": "./dist/analyzer.mjs",
      "require": "./dist/analyzer.js",
      "types": "./dist/analyzer.d.ts"
    },
    "./generator": {
      "import": "./dist/generator.mjs",
      "require": "./dist/generator.js",
      "types": "./dist/generator.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix"
  },
  "keywords": [
    "hyperscript",
    "developer-tools",
    "cli",
    "visual-builder",
    "code-generation",
    "analyzer",
    "scaffolding",
    "hyperfixi"
  ],
  "author": "HyperFixi Team",
  "license": "MIT",
  "dependencies": {
    "@hyperfixi/core": "*",
    "boxen": "^7.1.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.0",
    "commander": "^11.0.0",
    "express": "^4.18.0",
    "fs-extra": "^11.1.0",
    "glob": "^10.3.0",
    "happy-dom": "20.0.6",
    "inquirer": "^9.2.0",
    "open": "^9.1.0",
    "ora": "^7.0.0",
    "semver": "^7.5.0",
    "vite": "7.1.10",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.0",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "src",
    "templates"
  ],
  "publishConfig": {
    "access": "public"
  }
}
