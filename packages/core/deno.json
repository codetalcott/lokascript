{
  "name": "@hyperfixi/core",
  "version": "1.0.0",
  "description": "Modern, tree-shakeable hyperscript for Deno and Node.js",
  "exports": "./src/mod.ts",
  "imports": {
    "@hyperfixi/core": "./src/mod.ts",
    "@hyperfixi/core/": "./src/",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts"
  },
  "tasks": {
    "test": "deno test --allow-dom --allow-env src/**/*.test.ts",
    "test:watch": "deno test --allow-dom --allow-env --watch src/**/*.test.ts",
    "bundle": "deno bundle src/mod.ts dist/hyperfixi-deno.js",
    "check": "deno check src/mod.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "compile": "deno compile --allow-dom --allow-env --output=bin/hyperfixi src/cli.ts"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns", "deno.unstable"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["dist/", "node_modules/"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "exclude": ["dist/", "node_modules/"]
  },
  "test": {
    "include": ["src/**/*.test.ts"]
  }
}