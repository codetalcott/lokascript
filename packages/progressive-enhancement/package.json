{
  "name": "@hyperfixi/progressive-enhancement",
  "version": "0.1.0",
  "description": "Progressive enhancement with capability detection for HyperFixi applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./detector": {
      "import": "./dist/detector.mjs",
      "require": "./dist/detector.js",
      "types": "./dist/detector.d.ts"
    },
    "./enhancer": {
      "import": "./dist/enhancer.mjs",
      "require": "./dist/enhancer.js",
      "types": "./dist/enhancer.d.ts"
    },
    "./levels": {
      "import": "./dist/levels.mjs",
      "require": "./dist/levels.js",
      "types": "./dist/levels.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix"
  },
  "keywords": [
    "hyperscript",
    "progressive-enhancement",
    "capability-detection",
    "feature-detection",
    "accessibility",
    "performance",
    "hyperfixi"
  ],
  "author": "HyperFixi Team",
  "license": "MIT",
  "dependencies": {
    "@hyperfixi/core": "*",
    "happy-dom": "20.0.6",
    "vite": "7.1.10"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.0.0",
    "jsdom": "^23.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  }
}
