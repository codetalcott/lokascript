{
  "name": "@hyperfixi/mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for HyperFixi hyperscript development",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hyperfixi-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "hyperscript",
    "hyperfixi",
    "ai",
    "llm",
    "development-tools"
  ],
  "author": "HyperFixi Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0"
  },
  "peerDependencies": {
    "@hyperfixi/ast-toolkit": "*",
    "@hyperfixi/patterns-reference": "*",
    "@hyperfixi/semantic": "*"
  },
  "peerDependenciesMeta": {
    "@hyperfixi/ast-toolkit": {
      "optional": true
    },
    "@hyperfixi/patterns-reference": {
      "optional": true
    },
    "@hyperfixi/semantic": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hyperfixi/ast-toolkit": "file:../ast-toolkit",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist"
  ]
}
