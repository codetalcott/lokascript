{
  "name": "@hyperfixi/mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for HyperFixi hyperscript development",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hyperfixi-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "service:install": "cp com.hyperfixi.mcp-server.plist ~/Library/LaunchAgents/ && launchctl load ~/Library/LaunchAgents/com.hyperfixi.mcp-server.plist",
    "service:uninstall": "launchctl unload ~/Library/LaunchAgents/com.hyperfixi.mcp-server.plist && rm ~/Library/LaunchAgents/com.hyperfixi.mcp-server.plist",
    "service:start": "launchctl start com.hyperfixi.mcp-server",
    "service:stop": "launchctl stop com.hyperfixi.mcp-server",
    "service:restart": "launchctl stop com.hyperfixi.mcp-server && launchctl start com.hyperfixi.mcp-server",
    "service:status": "launchctl list | grep hyperfixi || echo 'Not running'",
    "service:logs": "tail -f logs/stdout.log logs/stderr.log"
  },
  "keywords": [
    "mcp",
    "hyperscript",
    "hyperfixi",
    "ai",
    "llm",
    "development-tools"
  ],
  "author": "HyperFixi Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "@hyperfixi/semantic": "file:../semantic",
    "@hyperfixi/patterns-reference": "file:../patterns-reference"
  },
  "peerDependencies": {
    "@hyperfixi/ast-toolkit": "*",
    "@hyperfixi/patterns-reference": "*",
    "@hyperfixi/semantic": "*"
  },
  "peerDependenciesMeta": {
    "@hyperfixi/ast-toolkit": {
      "optional": true
    },
    "@hyperfixi/patterns-reference": {
      "optional": true
    },
    "@hyperfixi/semantic": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hyperfixi/ast-toolkit": "file:../ast-toolkit",
    "@hyperfixi/patterns-reference": "file:../patterns-reference",
    "@hyperfixi/semantic": "file:../semantic",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist"
  ]
}
