{
  "name": "@hyperfixi/monorepo",
  "version": "2.1.0",
  "description": "LokaScript monorepo - multilingual hyperscript engine with 24-language support",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:workspaces": "npm run build --workspaces --if-present",
    "build:packages": "npm run build --workspace=packages/* --if-present",
    "test": "npm run test --workspaces",
    "test:integration": "npm test --workspace=@hyperfixi/core && npm test --workspace=@lokascript/semantic",
    "test:check": "./scripts/test-check-all.sh",
    "test:core": "npm test --workspace=@hyperfixi/core",
    "test:semantic": "npm test --workspace=@lokascript/semantic",
    "test:multilingual": "npm run test:multilingual --workspace=@hyperfixi/testing-framework",
    "test:multilingual:quick": "npm run test:multilingual:quick --workspace=@hyperfixi/testing-framework",
    "test:multilingual:full": "npm run test:multilingual:full --workspace=@hyperfixi/testing-framework",
    "test:multilingual:regression": "npm run test:multilingual:regression --workspace=@hyperfixi/testing-framework",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "clean:test": "rm -rf packages/*/coverage packages/*/html packages/*/playwright-report packages/*/test-results packages/*/.vitest clients/*/coverage",
    "bootstrap": "npm install",
    "release": "npm run build && npm run test && npm run release:version",
    "release:version": "lerna version --conventional-commits",
    "release:publish": "lerna publish from-git",
    "dev": "npx http-server . -p 3000 -c-1",
    "docs:dev": "npm run dev --workspace=apps/docs-site",
    "docs:build": "npm run build --workspace=apps/docs-site",
    "check:fresh": "./scripts/ensure-fresh.sh packages/framework packages/semantic packages/aot-compiler packages/compilation-service packages/mcp-server",
    "compatibility:monitor": "node scripts/compatibility-monitor.js",
    "compatibility:improve": "node scripts/improvement-workflow.js",
    "compatibility:cycle": "npm run compatibility:monitor && npm run compatibility:improve",
    "compatibility:dashboard": "node scripts/metrics-dashboard.js",
    "generate:skills": "npx tsx scripts/generate-skills.ts",
    "patterns:generate": "node scripts/testing/generate-pattern-tests.mjs",
    "patterns:test": "node scripts/testing/test-all-patterns.mjs",
    "patterns:validate": "npm run patterns:generate && npm run patterns:test",
    "patterns:extract": "node scripts/analysis/extract-official-patterns.mjs",
    "patterns:coverage": "node scripts/analysis/verify-patterns-coverage.mjs",
    "patterns:full": "npm run build:browser --prefix packages/core && npm run patterns:validate",
    "version:set": "node scripts/set-version.cjs",
    "version:bump": "node scripts/bump-version.cjs",
    "version:validate": "node scripts/validate-versions.cjs",
    "changelog:validate": "node scripts/validate-changelog.cjs",
    "packages:list": "node scripts/list-packages.cjs",
    "packages:list:public": "node scripts/list-packages.cjs --public",
    "packages:list:private": "node scripts/list-packages.cjs --private",
    "rebuild": "npm run build && npm run typecheck",
    "rebuild:full": "./scripts/rebuild-all.sh",
    "rebuild:clean": "./scripts/rebuild-all.sh --clean",
    "rebuild:fast": "./scripts/rebuild-all.sh --skip-tests",
    "hooks:enable-pre-push": "cp .husky/pre-push.example .husky/pre-push && chmod +x .husky/pre-push && echo '✅ Pre-push hook enabled'",
    "hooks:disable-pre-push": "rm -f .husky/pre-push && echo '✅ Pre-push hook disabled'",
    "workspace:enable": "node scripts/use-workspace-protocol.cjs && npm install",
    "prepublishOnly": "npm run version:validate && npm run changelog:validate && npm run build && npm run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lerna": "^9.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "tar": "^7.5.7",
    "esbuild": "^0.25.11",
    "hono": "^4.11.7"
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "hyperscript",
    "fixi",
    "monorepo",
    "dom",
    "reactive",
    "expressions",
    "parser"
  ],
  "author": "LokaScript Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codetalcott/hyperfixi.git"
  },
  "bugs": {
    "url": "https://github.com/codetalcott/hyperfixi/issues"
  },
  "homepage": "https://github.com/codetalcott/hyperfixi#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
